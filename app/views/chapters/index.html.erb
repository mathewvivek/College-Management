<h3>Chapter list</h3>

<table border='1'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Order number</th>
      <th>Course</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @chapters.each do |chapter| %>
      <tr>
        <td><%= chapter.name %></td>
        <td><%= chapter.order_number %></td>
        <td><%= chapter.course.name %></td>
        <td><%= link_to 'Show', chapter %></td>
        <td><%= link_to 'Edit', edit_chapter_path(chapter) %></td>
        <td><%= link_to 'Destroy', chapter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chapter', new_chapter_path %><br/>
<%= link_to 'Back', root_path %>
